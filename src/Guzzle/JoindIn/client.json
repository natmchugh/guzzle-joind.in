{
    "name": "Joind In API",
    "baseUrl": "http://api.joind.in/v2.1/?apikey={{apikey}}",
    "operations": {
        "getEvents": {
            "httpMethod": "GET",
            "uri": "events",
            "summary": "List events",
            "parameters": {
                "format": {
                    "location": "query",
                    "description": "Output format as JSON or HTML"
                },
                "resultsperpage": {
                    "location": "query",
                    "description": "How many results to show per page in the results (zero for no pagination)"
                }
            },
            "responseClass": "EventsListOutput"
        }
    },
    "models": {
        "Event" : {
            "type": "object",
            "properties": {
                "name": {
                    "location": "json",
                    "type": "string"
                },
                "start_date": {
                    "location": "json",
                    "type": "string"
                },
                "end_date": {
                    "location": "json",
                    "type": "string"
                },
                "description": {
                    "location": "json",
                    "type": "string"
                },
                "attendee_count": {
                    "location": "json",
                    "type": "string"
                }
            }
        },
        "EventsListOutput": {
            "type": "object",
            "properties" : {
                "meta": {
                    "type": "integer",
                    "location": "json"
                },
                "events" : {
                    "type": "array",
                    "location": "json",
                    "items": {
                        "$ref": "Event"
                    }
                }
            }
        }
    }
}